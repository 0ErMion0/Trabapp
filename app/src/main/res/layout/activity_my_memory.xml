<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMemory">

    <!--[상단 네비게이션]-->
    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_icon" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="내 추억"
        android:textAppearance="@style/title"
        app:layout_constraintStart_toEndOf="@+id/imgBtnBack"

        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/searchMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round_search_text"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="추억 검색"
        android:inputType="text"
        android:textAppearance="@style/searchtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/addGroupButton"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/add_group_circle_button"
        android:src="@drawable/plusbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">


    </androidx.appcompat.widget.AppCompatImageButton>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="15dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">      <!--스크롤바 감추기-->


        <!--[그룹 목록]-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--그룹 버튼(카드뷰)-->

            <androidx.cardview.widget.CardView
                android:id="@+id/groupButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:paddingBottom="10dp"
                app:cardCornerRadius="10dp"
                tools:layout_marginBottom="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/group_button"
                        android:paddingLeft="16dp" />

                    <ImageView
                        android:id="@+id/groupColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/pink_circle" />

                    <TextView
                        android:id="@+id/groupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center|center_vertical"
                        android:text="대학 동기팟 프랑스"
                        android:textAppearance="@style/content" />

                    <TextView
                        android:id="@+id/groupDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="56dp"
                        android:layout_marginBottom="11dp"
                        android:gravity="center|center_vertical"
                        android:text="2020 . 05 . 20 ~ 2020 . 06 . 10"
                        android:textAppearance="@style/groupdate"
                        tools:ignore="TextSizeCheck" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/groupButton2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:paddingBottom="10dp"
                app:cardCornerRadius="10dp"
                tools:layout_marginBottom="10dp"
                tools:layout_marginTop="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/group_button"
                        android:paddingLeft="16dp" />

                    <ImageView
                        android:id="@+id/groupColor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/blue_circle" />

                    <TextView
                        android:id="@+id/groupName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center|center_vertical"
                        android:text="가족 국내여행"
                        android:textAppearance="@style/content" />

                    <TextView
                        android:id="@+id/groupDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="56dp"
                        android:layout_marginBottom="11dp"
                        android:gravity="center|center_vertical"
                        android:text="2020 . 05 . 20 ~ 2020 . 06 . 10"
                        android:textAppearance="@style/groupdate"
                        tools:ignore="TextSizeCheck" />

                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/groupButton3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:paddingBottom="10dp"
                app:cardCornerRadius="10dp"
                tools:layout_marginBottom="10dp"
                tools:layout_marginTop="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/group_button"
                        android:paddingLeft="16dp" />

                    <ImageView
                        android:id="@+id/groupColor3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/green_circle" />

                    <TextView
                        android:id="@+id/groupName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center|center_vertical"
                        android:text="일본여행 with 친구들"
                        android:textAppearance="@style/content" />

                    <TextView
                        android:id="@+id/groupDate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="56dp"
                        android:layout_marginBottom="11dp"
                        android:gravity="center|center_vertical"
                        android:text="2020 . 05 . 20 ~ 2020 . 06 . 10"
                        android:textAppearance="@style/groupdate"
                        tools:ignore="TextSizeCheck" />

                </FrameLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>