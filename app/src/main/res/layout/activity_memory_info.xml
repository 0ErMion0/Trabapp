<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoryInfo">

    <!--[상단 네비게이션]-->
    <!--뒤로가기 버튼-->
    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_icon" />

    <!--타이틀-->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:singleLine="true"
        android:text="대학 동기팟 프랑스"
        android:textAlignment="textStart"
        android:textAppearance="@style/title"

        app:layout_constraintStart_toEndOf="@+id/imgBtnBack"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <!--수정 버튼-->
    <ImageButton
        android:id="@+id/imgBtnEdit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/textTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pencil_icon" />


    <!--[내용]-->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="650dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- [멤버 입력] -->
            <TextView
                android:id="@+id/textTitleMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멤버"
                android:textAppearance="@style/titleSmall" />

            <EditText
                android:id="@+id/edtTextMember"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundbox_edit_text"
                android:ems="10"
                android:hint="김철수, 홍길동"
                android:inputType="text"
                android:padding="10dp"
                android:text="김짹짹, 똥쟁이 1호, 멀쩡한 뱁새"
                android:textAppearance="@style/content" />



            <!--[세로선]-->
            <View
                android:layout_marginTop="20dp"
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"/>



            <!--[일정 입력]-->
            <TextView
                android:id="@+id/textTitleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정"
                android:textAppearance="@style/titleSmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCalenderStart"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableRight="@drawable/calendar_icon"
                    android:gravity="left"
                    android:padding="11dp"
                    android:text="2023 - 07 - 25"
                    android:textAlignment="center"
                    android:textAppearance="@style/content"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity=""
                    android:text="  ~ "
                    android:textAppearance="@style/content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCalenderEnd"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableRight="@drawable/calendar_icon"
                    android:padding="11dp"
                    android:text="2023 - 07 - 25"
                    android:textAlignment="center"
                    android:textAppearance="@style/content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>



            <!--[세로선]-->
            <View
                android:layout_marginTop="20dp"
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"/>



            <!--[색상 지정]-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTitleColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색상"
                    android:textAppearance="@style/titleSmall" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdoRed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_red"
                        android:button="@android:color/transparent"
                        android:buttonTint="#00FFFFFF"
                        android:checked="true"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/rdoOrange"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_orange"
                        android:button="@android:color/transparent"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/rdoGreen"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_green"
                        android:button="@android:color/transparent"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/rdoMint"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_mint"
                        android:button="@android:color/transparent"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/rdoBlue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_blue"
                        android:button="@android:color/transparent"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/rdoPurple"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radio_purple"
                        android:button="@android:color/transparent"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>
            </LinearLayout>



            <!--[세로선]-->
            <View
                android:layout_marginTop="20dp"
                android:background="@color/gray2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="20dp"/>



            <!--[추억 목록]-->
            <TextView
                android:id="@+id/textTitleMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추억 목록"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/titleSmall" />

            <!--추억-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">


                <!--사진 미리보기-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundbox_edit_text"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imgPic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/test_pic" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTitle1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="개쩌는 파리, 김뱁새가 영접하다"
                            android:textAppearance="@style/smallBold" />

                        <TextView
                            android:id="@+id/textContents1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:text="마참내 에펠탑 영접~!!~! \n신난돠~~~~~"
                            android:textAppearance="@style/smallGray"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/textDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2020 . 05 . 20   -   2020 . 05 . 20"
                            android:textAlignment="textEnd"
                            android:textAppearance="@style/smallGray2"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--추억-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/roundbox_edit_text"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textTitle2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="음~ 파리의 향기"
                        android:textAppearance="@style/smallBold" />

                    <TextView
                        android:id="@+id/textContents2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="에펠탑 2트!! 오랜만이다. :)"
                        android:textAppearance="@style/smallGray"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/textDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2022 . 06 . 21   -   2022 . 06 . 29"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/smallGray2"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--추억-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@drawable/roundbox_edit_text">

                    <TextView
                        android:id="@+id/textTitle3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="개쩌는 파리, 김뱁새가 영접하다"
                        android:textAppearance="@style/smallBold" />

                    <TextView
                        android:id="@+id/textContents3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text="마참내 에펠탑 영접~!!~! \n신난돠~~~~~"
                        android:textAppearance="@style/smallGray"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/textDate3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2020 . 05 . 20   -   2020 . 05 . 20"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/smallGray2"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>