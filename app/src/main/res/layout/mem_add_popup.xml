<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="333dp"
    android:layout_height="211dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/popuptitle"
        android:text="추억 추가" />
    <View
        android:background="@color/gray2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="6dp"
        android:padding="10dp"
        android:text="추억명"
        android:textAppearance="@style/popuphinttext" />

    <EditText
        android:id="@+id/newGroupName"
        android:layout_width="255dp"
        android:layout_height="38dp"
        android:background="#00ff0000"
        android:paddingLeft="16dp"
        android:hint="즐거운 우리들의 여행"
        android:textAppearance="@style/content"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>

    <View
        android:background="@color/gray2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="6dp"
            android:padding="10dp"
            android:text="일정"
            android:textAppearance="@style/popuphinttext" />

        <TextView
            android:id="@+id/startDate"
            android:layout_width="98dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/popupdate"
            android:textAlignment="center"
            android:gravity="center"
            android:text="2020 . 05 . 20"/>

        <ImageView
            android:id="@+id/startDateIconBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="~"
            android:textAppearance="@style/popuphinttext"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="98dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/popupdate"
            android:textAlignment="center"
            android:gravity="center"
            android:text="2020 . 06 . 10"/>

        <ImageView
            android:id="@+id/endDateIconBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <View
        android:background="@color/gray2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="60dp"
            android:padding="10dp"
            android:text="색상"
            android:textAppearance="@style/popuphinttext" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdoRed"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_red"
                android:button="@android:color/transparent"
                android:buttonTint="#00FFFFFF"
                android:checked="true"
                android:padding="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rdoOrange"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_orange"
                android:button="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rdoGreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_green"
                android:button="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rdoMint"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_mint"
                android:button="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rdoBlue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_blue"
                android:button="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rdoPurple"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radio_purple"
                android:button="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

    </LinearLayout>

    <View
        android:background="@color/gray2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/red2"
            android:background="#00ff0000"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/addGroupAcceptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:padding="0dp"
            android:text="추가"
            android:textColor="@color/navyBlack"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>



</LinearLayout>